@model AutoService.Services.ViewModels.ApplicationContent
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Application"))
{
    <div class="custom-form-group">
        <div class="container">
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.Filter.CarModel, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Filter.CarModel, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Filter.CarModel)
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.Filter.RequestType, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Filter.RequestType, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Filter.RequestType)
                </div>
            </div>
        </div>
        <div class="row">
            <button type="submit" class="btn btn-primary col-lg-2 col-lg-offset-4 col-md-2 col-md-offset-4 col-sm-2 col-sm-offset-2 col-xs-2 col-xs-offset-2">Фильтровать</button>
            <a href="~/" class="btn btn-default col-md-1 col-lg-1 col-xs-3 col-sm-2" role="button">Отмена</a>
        </div>
    </div>

    
}

@Html.Partial("ApplicationList")


