@using AutoService.Services.ViewModels
@model CoordinationResponseCreate
@{
    ViewBag.Title = "Ответ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="custom-form-group">
    <div class="row">
        <div class="col-md-offset-4 col-lg-offset-4 col-sm-offset-3 col-xs-offset-2">
            <h2>@ViewBag.Title</h2><br />
        </div>
    </div>
    @using (Html.BeginForm("CreateResponse", "Application", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "createApplicationForm" }))
    {
        @Html.HiddenFor(m => m.id)
        @Html.HiddenFor(m => m.CoordinationRequestId)
        <div class="container">
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.Message, new { @class = "control-label required" })
                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Message)
                </div>
            </div>
        </div>

        <div class="row">
            <button type="submit" class="btn btn-primary col-lg-1 col-lg-offset-4 col-md-1 col-md-offset-4 col-sm-2 col-sm-offset-2 col-xs-3 col-xs-offset-2">Ответить</button>
            <a href="~/" class="btn btn-default col-md-1 col-lg-1 col-xs-3 col-sm-2" role="button">Отмена</a>
        </div>
    }
</div>
